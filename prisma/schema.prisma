generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Course {
  id          String @id @default(uuid())
  name        String
  description String
  image       String
  duration    Int
  instructor  String
  starred     Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Settings {
  id          String @id @default(uuid())
  title       String
  about       String
  createdAt   DateTime @default(now())
}


